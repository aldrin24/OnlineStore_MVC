@model IEnumerable<OnlineStore_MVC.Models.tbl_ImageCommercialSlider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image_Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image_Timer)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Image_Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image_Name)
        </td>
        <td>
            <img src="@Url.Content(item.Slider_Path)" style="height: 50px; width: 100px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image_Timer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Image_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Image_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Image_ID })
        </td>
    </tr>
}

</table>
